<form class="condition-browser-form gum-browser">

    <div class="browser-container">

        <aside class="browser-sidebar">
            <div class="filter-group">
                <h3 class="filter-title">Buscar</h3>
                <div class="search-box">
                    <input type="text" name="search" placeholder="Buscar condição..."/>
                    <i class="fas fa-search"></i>
                </div>
            </div>
            
            
            <div class="filter-group">
                <h3 class="filter-title">Tipo de Efeito</h3>
                <label class="filter-check"><input type="checkbox" name="filter-attribute" checked/> <span>Atributo</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-status" checked/> <span>Status</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-chat" checked/> <span>Chat</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-macro" checked/> <span>Macro</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-flag" checked/> <span>Flag</span></label>
            </div>

        </aside>

        <main class="browser-content">
            <ol class="results-list">
                {{#each conditions as |condition|}}
                <li class="result-item" data-item-id="{{condition.id}}">
                    
                    <div class="item-icon">
                        {{#if condition.displayImg}}
                            <img src="{{condition.displayImg}}" alt="{{condition.name}}"/>
                        {{/if}}
                    </div>

                    <div class="item-info">
                        <span class="item-name">{{condition.name}}</span>
                    </div>

                    <div class="item-actions">
                        <button type="button" class="browser-quick-view" data-id="{{condition.id}}" title="Visualizar condição">
                            <i class="fas fa-eye"></i>
                        </button>
                        <label class="item-select" for="condition-{{condition.id}}">
                            <input type="checkbox" name="{{condition.id}}" id="condition-{{condition.id}}" />
                        </label>
                    </div>
                </li>
                {{else}}
                <li class="placeholder-text">Nenhuma condição encontrada no compêndio "[GUM] Condições".</li>
                {{/each}}
            </ol>
        </main>

    </div>

    <footer class="browser-footer">
        <button type="submit">
            <i class="fas fa-check"></i> Anexar Selecionadas
        </button>
    </footer>

</form>