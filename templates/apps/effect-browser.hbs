<form class="effect-browser-form gum-browser">

    <div class="browser-container">

        {{!-- Coluna da Esquerda (Sidebar de Filtros Simplificada) --}}
        <aside class="browser-sidebar">
            <div class="filter-group">
                <h3 class="filter-title">Buscar</h3>
                <div class="search-box">
                    <input type="text" name="search" placeholder="Buscar efeito..."/>
                    <i class="fas fa-search"></i>
                </div>
            </div>
            
            <div class="filter-group">
                <h3 class="filter-title">Tipo</h3>
                <label class="filter-check"><input type="checkbox" name="filter-attribute" checked/> <span>Atributo</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-status" checked/> <span>Status</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-roll_modifier" checked/> <span>Mod. Rolagem</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-chat" checked/> <span>Chat</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-macro" checked/> <span>Macro</span></label>
                <label class="filter-check"><input type="checkbox" name="filter-flag" checked/> <span>Flag</span></label>
            </div>

        </aside>

        {{!-- Coluna da Direita (Resultados Adaptados para Efeitos) --}}
        <main class="browser-content">
            <ol class="results-list">
                {{#each effects as |effect|}}
                <li class="result-item" data-item-id="{{effect.id}}">
                    
                    <div class="item-icon">
                        {{#if effect.displayImg}}
                            <img src="{{effect.displayImg}}" alt="{{effect.name}}"/>
                        {{/if}}
                    </div>

                    <div class="item-info">
                        <span class="item-name">{{effect.name}}</span>
                    </div>

                    <div class="item-actions">
                        <button type="button" class="browser-quick-view" data-id="{{effect.id}}" title="Visualizar efeito">
                            <i class="fas fa-eye"></i>
                        </button>
                        <label class="item-select" for="effect-{{effect.id}}">
                            <input type="checkbox" name="{{effect.id}}" id="effect-{{effect.id}}" />
                        </label>
                    </div>
                </li>
                {{else}}
                <li class="placeholder-text">Nenhum efeito encontrado no compÃªndio "GUM - Efeitos".</li>
                {{/each}}
            </ol>
        </main>

    </div>

    <footer class="browser-footer">
        <button type="submit">
            <i class="fas fa-check"></i> Adicionar Selecionados
        </button>
    </footer>

</form>