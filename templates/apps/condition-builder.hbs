<form class="condition-builder-form">
    {{!-- A área de edição agora está no topo e é a principal --}}
    <div class="editor-panel">
        {{!-- ✅ O TEXTO DE AJUDA AGORA É O PLACEHOLDER --}}
        <textarea name="system.when" placeholder="Use a paleta de ferramentas abaixo para construir sua fórmula ou escreva diretamente na caixa...">{{item.system.when}}</textarea>
    </div>

    {{!-- A paleta de ferramentas abaixo --}}
    <div class="palette">
        <div class="palette-group">
            <div class="palette-header">
                <i class="fas fa-sitemap"></i> Estruturas de Regra
            </div>
            <div class="palette-buttons">
                <button type="button" class="palette-button" data-action="open-structures">Estruturas...</button>
            </div>
        </div>
        
        <div class="palette-group">
            <div class="palette-header">
                <i class="fas fa-cube"></i> Ferramentas de Fórmula
            </div>
            <div class="palette-buttons">
                <button type="button" class="palette-button" data-action="open-attributes">Atributos...</button>
                <button type="button" class="palette-button" data-action="open-operators">Operadores...</button>
                <button type="button" class="palette-button" data-action="open-connectors">Conectores...</button>
            </div>
        </div>
    </div>

    {{!-- O botão Salvar, agora parte do layout principal --}}
    <div class="dialog-footer-actions">
        <button type="submit">
            <i class="fas fa-save"></i> Salvar Fórmula
        </button>
    </div>
</form>