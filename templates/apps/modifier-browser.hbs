<form class="modifier-browser-form gum-browser">

  <div class="browser-container">

    <aside class="browser-sidebar">
      <div class="filter-group">
        <h3 class="filter-title">Buscar</h3>
        <div class="search-box">
          <input type="text" name="search" placeholder="Buscar modificador..."/>
          <i class="fas fa-search"></i>
        </div>
      </div>
      <div class="filter-group">
        <h3 class="filter-title">Custo</h3>
        <label class="filter-check"><input type="checkbox" name="filter-enhancements"/> <span>Ampliações (+)</span></label>
        <label class="filter-check"><input type="checkbox" name="filter-limitations"/> <span>Limitações (-)</span></label>
      </div>
    </aside>

    <main class="browser-content">
      <ol class="results-list">
        {{#each modifiers as |mod|}}
        <li class="result-item" data-item-id="{{mod.id}}">
          
          <div class="item-icon">
            {{#if mod.displayImg}}
              <img src="{{mod.displayImg}}" alt="{{mod.name}}"/>
            {{/if}}
          </div>

          <div class="item-info">
            <span class="item-name">{{mod.name}}</span>
          </div>

          <div class="item-actions">
            <button type="button" class="browser-quick-view" data-id="{{mod.id}}" title="Visualizar modificador">
              <i class="fas fa-eye"></i>
            </button>
            <label class="item-select" for="mod-{{mod.id}}">
              <input type="checkbox" name="{{mod.id}}" id="mod-{{mod.id}}" />
            </label>
          </div>
        </li>
        {{else}}
        <li class="placeholder-text">Nenhum modificador encontrado.</li>
        {{/each}}
      </ol>
    </main>

  </div>

  <footer class="browser-footer">
    <button type="submit">
      <i class="fas fa-check"></i> Adicionar Selecionados
    </button>
  </footer>

</form>