<form class="modifier-browser-form">

  {{!-- Container principal de 2 colunas --}}
  <div class="browser-container">

    {{!-- Coluna da Esquerda (Sidebar de Filtros) --}}
    <aside class="browser-sidebar">
      <div class="filter-group">
        <h4 class="filter-title">Buscar por Nome</h4>
        <div class="search-box">
          <input type="text" name="search" placeholder="Buscar modificador..."/>
          <i class="fas fa-search"></i>
        </div>
      </div>
      <div class="filter-group">
        <h4 class="filter-title">Filtrar por Custo</h4>
        <label><input type="checkbox" name="filter-enhancements"/> Ampliações (+)</label>
        <label><input type="checkbox" name="filter-limitations"/> Limitações (-)</label>
      </div>
    </aside>

    {{!-- Coluna da Direita (Resultados) --}}
   <main class="browser-content">
  <ol class="results-list">
  {{#each modifiers as |mod|}}
    <li class="result-item" data-item-id="{{mod.id}}">
      
      <div class="item-icon">
        {{!-- A lógica de imagem agora deve funcionar corretamente com o JS atualizado --}}
        {{#if mod.displayImg}}
          <img src="{{mod.displayImg}}" alt="{{mod.name}}"/>
        {{/if}}
      </div>

      <div class="item-info">
        <label class="item-label" for="mod-{{mod.id}}">
          {{!-- MUDANÇA: Nome e Custo agora estão juntos --}}
          <div class="info-line-1">
            <span class="item-name">{{mod.name}}</span>
            <span class="item-cost">({{mod.system.cost}})</span>
          </div>
          {{#if mod.system.applied_effect}}
            <div class="info-line-2">
              <span class="item-details">{{mod.system.applied_effect}}</span>
            </div>
          {{/if}}
        </label>
      </div>

      <div class="item-controls">
        <input type="checkbox" name="{{mod.id}}" id="mod-{{mod.id}}" />
      </div>
    </li>
  {{else}}
    <li class="placeholder-text">Nenhum modificador encontrado.</li>
  {{/each}}
</ol>
</main>

  </div>

  {{!-- Rodapé com o botão de seleção --}}
  <footer class="browser-footer">
    <button type="submit">
      <i class="fas fa-check"></i> Adicionar Selecionados
    </button>
  </footer>

</form>