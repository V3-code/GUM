                             <div class="display-stat">
                                 <label>Mag.</label>
                                 <span>{{attack.mag}}</span>
                             </div>
                             <div class="display-stat">
                                 <label>ST Mín.</label>
                                 <span>{{attack.min_strength}}</span>
                             </div>
