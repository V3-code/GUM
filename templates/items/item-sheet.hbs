        <div class="form-group">
            <label>Nível</label>
            <input type="number" name="system.skill_level" value="{{system.skill_level}}"/>
        </div>
        <div class="form-group input-narrow layout-inline"><label>Modificadores</label><input type="number" name="system.other_mods" value="{{item.system.other_mods}}"/></div>
    </div>
    </div>
    {{!-- Grupo 3: Uso e Ativação --}}
