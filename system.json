{
  "title": "GURPS GUM (Não Oficial)",
  "id": "gum",
  "version": "1.0.0",
  "description": "Adaptação não oficial do sistema GURPS para uso no Foundry VTT. Criado por fãs, sem fins lucrativos.",

  "authors": [
    {
      "name": "Victor Valentim",
      "url": "https://github.com/V3-code"
    }
  ],

  "compatibility": {
    "minimum": "11",
    "verified": "13"
  },

  "grid": {
    "distance": 1,
    "units": "m"
  },
  "primaryTokenAttribute": "attributes.hp",
  "secondaryTokenAttribute": "attributes.fp",
  "initiative": "@attributes.basic_speed.final + (@attributes.dx.final/100) + (1d6/1000)",

  "esmodules": [
    "scripts/main.js",
    "scripts/gum-data.js",
    "module/config.js",
    "module/item/gurps-item-sheet.js",
    "module/actor/gurps-actor-sheet.js",
    "scripts/apps/condition-builder.js",
    "scripts/apps/effect-builder.js",
    "scripts/apps/effect-sheet.js",
    "scripts/effects-engine.js",
    "scripts/apps/trigger-sheet.js",
    "scripts/apps/condition-sheet.js",
    "scripts/apps/damage-application.js",
    "module/settings.js",
    "module/apps/modifier-browser.js",
    "module/apps/effect-browser.js",
    "module/item/gurps-armor-sheet.js",
    "module/apps/trigger-browser.js"
    
  ],
  "styles": [
    "styles/styles.css",
    "styles/modifier-browser.css",
    "styles/effect-browser.css",
    "styles/item-sheet.css",
    "styles/damage-application.css",
    "styles/conditions.css",
    "styles/condition-builder.css",
    "styles/condition-browser.css",
    "styles/trigger-browser.css" 
  ],
  "packs": [
    {
      "name": "modifiers",
      "label": "[GUM] Modificadores",
      "system": "gum",
      "path": "./packs/modifiers",
      "type": "Item",
      "private": false
    },
    {
      "name": "gatilhos",
      "label": "[GUM] Gatilhos",
      "system": "gum",
      "path": "./packs/gatilhos",
      "type": "Item",
      "private": false
    },
    {
      "name": "efeitos",
      "label": "[GUM] Efeitos",
      "system": "gum",
      "path": "./packs/efeitos",
      "type": "Item",
      "private": false
    },
        {
      "name": "conditions",
      "label": "[GUM] Condições",
      "system": "gum",
      "path": "./packs/conditions",
      "type": "Item",
      "private": false
    },
    {
      "name": "Regras",
      "label": "[GUM] Regras",
      "system": "gum",
      "path": "./packs/regras",
      "type": "Item",
      "private": false
    }
  ],
  "license": "CC BY-NC-ND 4.0",
  "url": "https://github.com/V3-code/GUM",
  "manifest": "https://github.com/V3-code/GUM/blob/master/system.json",
  "readme": "https://github.com/V3-code/GUM/blob/master/README.md",
  "bugs": "https://github.com/V3-code/GUM/issues"
}




